{
    "env": {
        "node":true,
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 13
    },
    "ignorePatterns": ["*.json", "*.rest"],
    "rules": {
        "semi": ["off", "always"],
        "quotes": ["error", "single"]
    }
}
